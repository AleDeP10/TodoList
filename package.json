{
  "name": "todolist",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "AleDeP10 <alessandro.deprato@outlook.com>",
  "license": "MIT",
  "repository": "https://github.com/AleDeP10/TodoList.git",
  "workspaces": [
    "todolist-ui-kit",
    "todolist-storybook",
    "todolist-fe-nextjs"
  ],
  "scripts": {
    "setup": "yarn run build-scripts && yarn run build-shims && yarn run enforce-yarn-shim && yarn run check-versions && yarn run copy-ui-kit",
    "build-scripts": "tsc -p tsconfig.scripts.json",
    "build-shims": "node dist/scripts/generateShims.js",
    "enforce-yarn-shim": "node dist/scripts/enforceYarnShim.js",
    "check-versions": "node dist/scripts/checkVersions.js",
    "copy-ui-kit": "node dist/scripts/copyUiKit.js",
    "clean-install": "node dist/scripts/cleanInstall.js"
  },
  "keywords": [
    "todo-list",
    "task-management",
    "nextjs",
    "angularjs",
    "redux",
    "storybook",
    "tailwindcss",
    "aspnet-core",
    "monorepo",
    "typescript"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "resolutions": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@tailwindcss/postcss": "4.1.12",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "4.1.12",
    "typescript": "5.5.2"
  }
}
