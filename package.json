{
  "name": "todolist",
  "version": "2.0.1",
  "private": true,
  "type": "module",
  "author": "AleDeP10 <alessandro.deprato@outlook.com>",
  "license": "MIT",
  "repository": "https://github.com/AleDeP10/ToDoList.git",
  "workspaces": [
    "ui-kit",
    "storybook",
    "fe-nextjs/monolith"
  ],
  "scripts": {
    "setup": "yarn run build-scripts && yarn run build-shims && yarn run enforce-yarn-shim && yarn run check-versions && yarn run copy-ui-kit",
    "build-scripts": "tsc -p tsconfig.scripts.json",
    "build-shims": "node dist/scripts/generateShims.js && node dist/scripts/copySharedResources.js",
    "enforce-yarn-shim": "node dist/scripts/enforceYarnShim.js",
    "check-versions": "node dist/scripts/checkVersions.js",
    "copy-ui-kit": "node dist/scripts/copyUiKit.js",
    "clean-install": "node dist/scripts/cleanInstall.js",
    "copy-shared-resources": "node dist/scripts/copySharedResources.js"
  },
  "keywords": [
    "todo-list",
    "task-management",
    "nextjs",
    "angularjs",
    "redux",
    "storybook",
    "tailwindcss",
    "aspnet-core",
    "springboot",
    "monorepo",
    "typescript"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "devDependencies": {
    "postcss-cli": "11.0.1",
    "serve": "^14.2.0"
  },
  "resolutions": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@tailwindcss/postcss": "4.1.12",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "4.1.12",
    "typescript": "5.5.2",
    "framer-motion": "^12.23.12",
    "clsx": "^2.1.1"
  }
}
