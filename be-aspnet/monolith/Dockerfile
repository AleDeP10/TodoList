# ğŸ’ª Stage 1: Build the application
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# â¬‡ï¸ Copy and restore project dependencies
COPY ToDoList.csproj ./
RUN dotnet restore

# ğŸ“† Copy all source files and publish the app
COPY . ./
RUN dotnet publish ToDoList.csproj -c Release -o /app/publish

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸš€ Stage 2: Runtime image
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# ğŸ“… Copy the published output from the build stage
COPY --from=build /app/publish .

# ğŸ” Copy the HTTPS dev certificate into the container
COPY https/aspnet-dev.pfx /app/https/aspnet-dev.pfx

# ğŸŒ Expose the HTTPS port
EXPOSE 5000

# ğŸŒŸ Run the API directly (no entrypoint script)
CMD ["dotnet", "ToDoList.dll"]
