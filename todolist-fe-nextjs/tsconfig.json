{
  "compilerOptions": {
    "module": "ESNext", // "module": "esnext",
    "target": "ESNext", // "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true, // ok
    "moduleResolution": "Node", // "moduleResolution": "bundler",
    "resolveJsonModule": true, // ok
    "isolatedModules": true, // ok
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/scanUseClient.js"
  ],
  "exclude": ["node_modules"]
}
