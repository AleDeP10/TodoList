{
  "name": "todolist-storybook",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs --ignore-pattern storybook-static/",
    "prebuild": "../node_modules/.bin/postcss ./src/styles/tailwind.input.css -o public/styles/globals.css",
    "build-storybook": "yarn run prebuild && npx storybook@7.6.0 build && yarn run postbuild",
    "postbuild": "yarn run validate-storybook",
    "storybook-dev": "cross-env NODE_ENV=development npx storybook@7.6.0 dev --port 6006",
    "storybook": "npx serve storybook-static -l 6006",
    "validate-storybook": "node ../dist/scripts/validateStorybook.js"
  },
  "dependencies": {
    "@storybook/nextjs-vite": "^9.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@storybook/addon-a11y": "7.6.0",
    "@storybook/addon-actions": "7.6.0",
    "@storybook/addon-docs": "7.6.0",
    "@storybook/addon-essentials": "7.6.0",
    "@storybook/addon-interactions": "7.6.0",
    "@storybook/addon-links": "7.6.0",
    "@storybook/addon-onboarding": "8.0.0",
    "@storybook/addon-viewport": "7.6.0",
    "@storybook/addons": "7.6.0",
    "@storybook/blocks": "7.6.0",
    "@storybook/cli": "7.6.0",
    "@storybook/nextjs": "7.6.0",
    "@storybook/react": "7.6.0",
    "@storybook/react-webpack5": "7.6.0",
    "@storybook/test": "7.6.0",
    "@storybook/testing-library": "0.2.0",
    "@tailwindcss/postcss": "4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@types/scheduler": "0.16.2",
    "@types/storybook__react": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-loader": "^8.1.1",
    "storybook": "7.6.0",
    "tailwindcss": "4.1.12",
    "typescript": "5.5.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
