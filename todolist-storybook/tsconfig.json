{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "src/*": ["./src/*"]
    },
    "types": ["node", "react"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", "src/declarations.d.ts"],
  "exclude": ["node_modules"]
}
